        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nume_Carte)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pagini)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Categorie)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Autor.Nume_Autor)
            </td>
            
            <td>
