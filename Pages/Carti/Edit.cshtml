@page
@model ProiectMediiAplicatieWeb.Pages.Carti.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Carte</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Carte.ID" />
            <div class="form-group">
                <label asp-for="Carte.Nume_Carte" class="control-label"></label>
                <input asp-for="Carte.Nume_Carte" class="form-control" />
                <span asp-validation-for="Carte.Nume_Carte" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Carte.Pagini" class="control-label"></label>
                <input asp-for="Carte.Pagini" class="form-control" />
                <span asp-validation-for="Carte.Pagini" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Carte.Categorie" class="control-label"></label>
                <input asp-for="Carte.Categorie" class="form-control" />
                <span asp-validation-for="Carte.Categorie" class="text-danger"></span>
            </div>
            <label asp-for="Carte.Autor.Nume_Autor" class="control-label">Numele Autorului</label>
            <input asp-for="Carte.Autor.Nume_Autor" class="form-control" />

            <span asp-validation-for="Carte.Autor.Nume_Autor" class="text-danger"></span>
            <br />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
        
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
